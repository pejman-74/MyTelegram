<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowBackground">@mipmap/ic_launcher</item>
    </style>

    <style name="circleImageView" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="TextTitleStyle" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_30ssp</item>
    </style>

    <style name="TextBodyBoldStyle" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">#686868</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_15ssp</item>
    </style>

    <style name="TextMessageStyle" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/_15ssp</item>
    </style>

    <style name="NavigationTheme" parent="AppTheme">
        <item name="android:layout_marginBottom">@dimen/_10sdp</item>
    </style>


    <style name="SelectAvatarShapeOverlay" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="ReceivedMessageShapeOverlay" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSizeTopLeft">@dimen/_12sdp</item>
        <item name="cornerSizeTopRight">@dimen/_12sdp</item>
        <item name="cornerSizeBottomRight">@dimen/_12sdp</item>
        <item name="cornerSizeBottomLeft">0%</item>
    </style>
    <style name="SentMessageShapeOverlay" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSizeTopLeft">@dimen/_12sdp</item>
        <item name="cornerSizeTopRight">@dimen/_12sdp</item>
        <item name="cornerSizeBottomRight">0%</item>
        <item name="cornerSizeBottomLeft">@dimen/_12sdp</item>
    </style>

    <style name="SendMessageTextStyle" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/text_color_1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_15ssp</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/_12sdp</item>
        <item name="cornerSizeTopLeft">@dimen/_12sdp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
</resources>